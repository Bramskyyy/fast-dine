{% extends 'master.twig' %}

{% block pageContent %}
<h2 class="above-card">{{ restaurant.name }}</h2>
<div class="overview">
	<div class="container clearfix">
		<div class="restaurant">
			<div class="tables">
				{% for table in tables %}
					<div class="table">
						<div class="img"></div>
						<span class="seats">{{ table.seats }}</span>
					</div>
				{% endfor %}
			</div>
			<a href="#" class="book">Reserveer</a>
			<div class="details">
				<p class="description">{{ description }}</p>
			</div>
			<div class="map">
				<iframe
				width="1200"
				height="400"
				frameborder="0" style="border:0"
				src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAmOlPNkP3oLJAhaYk4bnoRLIxnwRuE2hs&q={{ restaurant.location|url_encode }}" allowfullscreen>
			</iframe>
			</div>

		</div>
	</div>
</div>


{% endblock %}
